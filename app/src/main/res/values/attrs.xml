<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="border_width" format="dimension" />
    <attr name="border_color" format="color" />
    <declare-styleable name="CountDownView">
        <attr name="background_color" format="color" />
        <attr name="border_width" />
        <attr name="border_color" />
        <attr name="text" format="string" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="count_down_time" format="integer" />
    </declare-styleable>
    <declare-styleable name="FloatViewLayout">
        <attr name="offset" format="float" />
    </declare-styleable>
    <declare-styleable name="SectorMenuView">
        <attr name="center_text" format="string" />
        <attr name="center_image" format="reference" />
    </declare-styleable>
    <declare-styleable name="CirclerView">
        <attr name="cv_color" format="color|reference" />
        <attr name="cv_color_gray" format="reference" />
        <attr name="cv_total" format="integer" />
        <attr name="cv_num" format="integer" />
        <attr name="cv_isradio" format="boolean" />
        <attr name="cv_width" format="dimension" />
        <attr name="cv_textsize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MatchView">
        <attr name="mv_win" format="integer" />
        <attr name="mv_ping" format="integer" />
        <attr name="mv_lost" format="integer" />
        <attr name="mv_total" format="integer" />
        <attr name="mv_text_size" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ExpandTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="arrowAlign" format="enum">
            <enum name="bottom" value="0" />
            <enum name="top" value="1" />
            <enum name="center" value="2" />
            <enum name="right" value="0" />
            <enum name="left" value="1" />
        </attr>
        <attr name="arrowPosition" format="enum">
            <enum name="right" value="0" />
            <enum name="below" value="1" />
        </attr>
        <attr name="arrowPadding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="WorldCup">
        <attr name="wc_color" format="color|reference" />
        <attr name="wc_width" format="dimension" />
    </declare-styleable>
    <declare-styleable name="DrawingView">
        <attr name="dv_circle_color" format="color|reference" />
        <attr name="dv_circle_width" format="dimension" />
        <attr name="dv_path_color" format="color|reference" />
        <attr name="dv_path_width" format="dimension" />
    </declare-styleable>
    <!-- 飘心动画自定义的属性 -->
    <declare-styleable name="HeartLayout">
        <attr name="initX" format="dimension" />
        <attr name="initY" format="dimension" />
        <attr name="xRand" format="dimension" />
        <attr name="animLengthRand" format="dimension" />
        <attr name="xPointFactor" format="dimension" />
        <attr name="animLength" format="dimension" />
        <attr name="heart_width" format="dimension" />
        <attr name="heart_height" format="dimension" />
        <attr name="bezierFactor" format="integer" />
        <attr name="anim_duration" format="integer" />
    </declare-styleable>
    <!--注意这里的name要和自定义View的名称一致，不然在xml布局中无法引用-->
    <declare-styleable name="CircleBarView">
        <attr name="progress_color" format="color"></attr>
        <attr name="bg_color" format="color"></attr>

        <attr name="bar_width" format="dimension"></attr>

        <attr name="start_angle" format="float"></attr>
        <attr name="sweep_angle" format="float"></attr>
    </declare-styleable>
    <declare-styleable name="WaveProgressView">
        <attr name="wave_color" format="color"></attr>
        <attr name="second_wave_color" format="color"></attr>
        <attr name="wave_bg_color" format="color"></attr>

        <attr name="wave_width" format="dimension"></attr>
        <attr name="wave_height" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="ExpandView">
        <attr name="evNum" format="integer" />
    </declare-styleable>
    <!--头像设置成圆形，自定义控件用到的style-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" />
        <attr name="border_color" />
    </declare-styleable>
    <declare-styleable name="MySwitchView">
        <attr name="strokeColor" format="color"/>
        <attr name="buttonColor" format="color"/>
        <attr name="state" format="boolean"/>
        <attr name="maskColor" format="color"/>

    </declare-styleable>
</resources>